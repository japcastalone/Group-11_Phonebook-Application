<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="prodman" alignment="CENTER" prefHeight="349.0" prefWidth="608.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gabriel.prodmsv.ProdManController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox alignment="CENTER" spacing="10.0">
        <ImageView fx:id="productImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        <ListView fx:id="lvProducts" onMouseClicked="#onMouseClicked" prefHeight="180.0" prefWidth="300.0" />
    </VBox>
    <VBox alignment="CENTER" spacing="10.0">
        <HBox prefHeight="50.0" prefWidth="300.0">
            <children>
                <Label prefWidth="100.0" text="Id" />
                <TextField fx:id="tfId" prefHeight="25.0" prefWidth="200.0" />
            </children>
        </HBox>
        <HBox prefHeight="50.0" prefWidth="300.0">
            <children>
                <Label prefWidth="100.0" text="Name" />
                <TextField fx:id="tfName" prefHeight="25.0" prefWidth="200.0" />
            </children>
        </HBox>
        <HBox prefHeight="50.0" prefWidth="300.0">
            <children>
                <Label prefWidth="100.0" text="Description" />
                <TextField fx:id="tfDesc" prefHeight="25.0" prefWidth="200.0" />
            </children>
        </HBox>
        <HBox prefHeight="50.0" prefWidth="300.0">
            <children>
                <Label prefWidth="100.0" text="Unit of Measure" />
                <TextField fx:id="tfUom" prefHeight="25.0" prefWidth="200.0" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0" prefHeight="50.0" prefWidth="300.0">
            <Button fx:id="createButton" mnemonicParsing="false" onAction="#onCreate" text="New"/>
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#onUpdate" text="Modify"/>
            <Button fx:id="deleteButton" onAction="#onDelete" text="Delete"/>
            <Button fx:id="closeButton" onAction="#onClose" text="Close"/>
        </HBox>
    </VBox>
</HBox>
